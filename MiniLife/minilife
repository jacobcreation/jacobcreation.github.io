<body>

<h1>MiniLife Simulator</h1>

<div class="stats" id="stats">
  Age: 0 | Money: $0 | Happiness: 50 | Health: 100
</div>

<div class="story" id="story">
  Welcome to MiniLife! Choose how your life begins.
</div>

<div id="choices">
  <button class="choice-btn" onclick="choose('study')">Study Hard</button>
  <button class="choice-btn" onclick="choose('play')">Play Video Games</button>
  <button class="choice-btn" onclick="choose('exercise')">Exercise</button>
</div>

<script>
let player = {
  age: 0,
  money: 0,
  happiness: 50,
  health: 100
};

function updateStats() {
  document.getElementById('stats').innerText = 
    `Age: ${player.age} | Money: $${player.money} | Happiness: ${player.happiness} | Health: ${player.health}`;
}

function choose(action) {
  // Increase age every choice
  player.age += 1;

  let storyText = "";

  if(action === 'study') {
    player.money += 10;
    player.happiness -= 5;
    storyText = "You studied hard. Money increases, but happiness drops a bit.";
  } else if(action === 'play') {
    player.happiness += 10;
    player.health -= 5;
    storyText = "You played games all day. Happiness rises, health drops.";
  } else if(action === 'exercise') {
    player.health += 10;
    player.happiness += 5;
    storyText = "You exercised. Health and happiness improve!";
  }

  // Random events
  let eventChance = Math.random();
  if(eventChance < 0.2) {
    player.money += 20;
    storyText += " Lucky day! You found $20!";
  } else if(eventChance > 0.8) {
    player.health -= 15;
    storyText += " Oh no! You caught a cold. Health drops!";
  }

  // Update story and stats
  document.getElementById('story').innerText = storyText;
  updateStats();

  // End game after age 18
  if(player.age >= 18) {
    document.getElementById('story').innerText += "\n\nYou are now 18! Life stage complete!";
    document.getElementById('choices').style.display = 'none';
  }
}

// Initialize stats display
updateStats();
</script>

</body>
</html>

<body>

<h1>MiniLife Simulator</h1>

<div class="stats" id="stats">
  Age: 0 | Money: $0 | Happiness: 50 | Health: 100
</div>

<div class="story" id="story">
  Welcome to MiniLife! Your life journey begins...
</div>

<div id="choices">
  <button class="choice-btn" onclick="choose('study')">Study Hard</button>
  <button class="choice-btn" onclick="choose('play')">Play Video Games</button>
  <button class="choice-btn" onclick="choose('exercise')">Exercise</button>
</div>

<script>
let player = {
  age: 0,
  money: 0,
  happiness: 50,
  health: 100
};

function updateStats() {
  document.getElementById('stats').innerText = 
    `Age: ${player.age} | Money: $${player.money} | Happiness: ${player.happiness} | Health: ${player.health}`;
}

function randomEvent() {
  let eventChance = Math.random();
  let eventText = "";
  if(eventChance < 0.15) {
    let gain = Math.floor(Math.random() * 50) + 10;
    player.money += gain;
    eventText = ` Lucky day! You found $${gain}!`;
  } else if(eventChance > 0.85) {
    let damage = Math.floor(Math.random() * 20) + 5;
    player.health -= damage;
    eventText = ` Oh no! You got sick. Health -${damage}.`;
  }
  return eventText;
}

function choose(action) {
  player.age += 1;
  let storyText = "";

  if(action === 'study') {
    player.money += 10;
    player.happiness -= 5;
    storyText = "You studied hard. Money +10, Happiness -5.";
  } else if(action === 'play') {
    player.happiness += 10;
    player.health -= 5;
    storyText = "You played games. Happiness +10, Health -5.";
  } else if(action === 'exercise') {
    player.health += 10;
    player.happiness += 5;
    storyText = "You exercised. Health +10, Happiness +5.";
  }

  storyText += randomEvent();

  // Cap stats between 0 and 100 for health/happiness
  player.health = Math.min(Math.max(player.health, 0), 100);
  player.happiness = Math.min(Math.max(player.happiness, 0), 100);

  document.getElementById('story').innerText = storyText;
  updateStats();

  if(player.health <= 0) {
    document.getElementById('story').innerText = `ðŸ’€ You died at age ${player.age}.\nGame Over!`;
    document.getElementById('choices').style.display = 'none';
  }
}

// Initialize stats display
updateStats();
</script>

</body>
</html>
